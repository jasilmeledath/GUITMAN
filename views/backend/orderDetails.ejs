                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-sm text-gray-500">Order Date</div>
                            <div class="font-semibold"><%= order.formattedDate %></div>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-sm text-gray-500">Payment Method</div>
                            <div class="font-semibold"><%= order.payment_method %></div>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-sm text-gray-500">Payment Status</div>
                            <div class="font-semibold"><%= order.payment_status %></div>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full bg-amber-100 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-sm text-gray-500">Order Status</div>
                            <div class="font-semibold" id="currentStatus">
                                <span class="status-badge <%= order.order_status === 'pending' ? 'status-pending' : order.order_status === 'confirmed' ? 'status-confirmed' : order.order_status === 'shipped' ? 'status-shipped' : order.order_status === 'delivered' ? 'status-delivered' : 'status-cancelled' %>">
                                    <%= order.order_status %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Left Column - Customer & Shipping Info -->
                <div class="lg:col-span-1">
                    <!-- Customer Info Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6 hover-scale">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800">Customer Information</h3>
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span class="text-gray-700"><%= order.user.first_name %> <%= order.user.last_name %></span>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <span class="text-gray-700"><%= order.user.email %></span>
                            </div>
                            
                            <% if(order.user.mobile) { %>
                            <div class="flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                <span class="text-gray-700"><%= order.user.mobile %></span>
                            </div>
                            <% } %>
                        </div>
                        
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <a href="#" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 text-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                </svg>
                                View customer profile
                            </a>
                        </div>
                    </div>
                    
                    <!-- Shipping Address Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6 hover-scale">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800">Shipping Address</h3>
                        </div>
                        
                        <% if(order.address) { %>
                        <div class="space-y-2">
                            <p class="text-gray-700"><%= order.address.address %></p>
                            <p class="text-gray-700">
                                <%= order.address.city ? order.address.city + ', ' : '' %>
                                <%= order.address.country ? order.address.country : '' %>
                            </p>
                            <% if(order.address.pincode) { %>
                            <p class="text-gray-700">Postal Code: <%= order.address.pincode %></p>
                            <% } %>
                        </div>
                        <% } else { %>
                        <p class="text-gray-500">No shipping address provided</p>
                        <% } %>
                        
                        <div class="mt-4 pt-4 border-t border-gray-100">
                            <a href="#" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 text-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                                </svg>
                                View on map
                            </a>
                        </div>
                    </div>
                    
                    <!-- Payment Info Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6 hover-scale">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800">Payment Information</h3>
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex items-center gap-2">
                                <% if(order.payment_method === 'card') { %>
                                <div class="flex items-center gap-2">
                                    <img src="/assets/imgs/card-brands/2.png" class="h-6 border rounded" alt="Card">
                                    <span class="text-gray-700">Master Card **** **** 4768</span>
                                </div>
                                <% } else { %>
                                <div class="flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z" />
                                    </svg>
                                    <span class="text-gray-700">Cash on Delivery</span>
                                </div>
                                <% } %>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="text-gray-700">Status: 
                                    <span class="<%= order.payment_status === 'paid' ? 'text-green-600' : 'text-amber-600' %>">
                                        <%= order.payment_status %>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Order Status Update Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6 hover-scale">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800">Update Order Status</h3>
                        </div>
                        
                        <div class="space-y-4">
                            <div class="grid grid-cols-1 gap-4">
                                <select class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition-all" id="orderStatus">
                                    <option value="">Select new status</option>
                                    <option value="pending" <%= order.order_status === 'pending' ? 'selected' : '' %>>Awaiting payment</option>
                                    <option value="confirmed" <%= order.order_status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                    <option value="shipped" <%= order.order_status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                    <option value="delivered" <%= order.order_status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                    <option value="cancelled" <%= order.order_status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                                
                                <button id="saveStatusBtn" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors flex items-center justify-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Update Status
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Return Request Section (if applicable) -->
                    <% if(order.return_details && order.return_details.status && order.return_details.status !== 'none') { %>
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6 hover-scale">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800">Return Request</h3>
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex items-center gap-2">
                                <span class="text-gray-600 font-medium">Status:</span>
                                <span id="returnStatusBadge">
                                    <% if(order.return_details.status === 'requested') { %>
                                        <span class="status-badge status-pending">Requested</span>
                                    <% } else if(order.return_details.status === 'approved') { %>
                                        <span class="status-badge status-confirmed">Approved</span>
                                    <% } else if(order.return_details.status === 'rejected') { %>
                                        <span class="status-badge status-cancelled">Rejected</span>
                                    <% } else if(order.return_details.status === 'completed') { %>
                                        <span class="status-badge status-delivered">Completed</span>
                                    <% } %>
                                </span>
                            </div>
                            
                            <div>
                                <span class="text-gray-600 font-medium">Reason:</span>
                                <p class="mt-1 text-gray-700"><%= order.return_details.reason || 'No reason provided' %></p>
                            </div>
                            
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <span class="text-gray-600 font-medium">Requested:</span>
                                    <p class="text-gray-700"><%= order.return_details.requested_at ? new Date(order.return_details.requested_at).toLocaleString() : 'N/A' %></p>
                                </div>
                                
                                <div>
                                    <span class="text-gray-600 font-medium">Processed:</span>
                                    <p class="text-gray-700"><%= order.return_details.processed_at ? new Date(order.return_details.processed_at).toLocaleString() : 'N/A' %></p>
                                </div>
                            </div>
                        </div>
                        
                        <% if(order.return_details.status === 'requested') { %>
                        <div class="mt-4 pt-4 border-t border-gray-100 grid grid-cols-2 gap-3">
                            <button id="approveReturnBtn" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg transition-colors flex items-center justify-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Approve
                            </button>
                            
                            <button id="rejectReturnBtn" class="bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-lg transition-colors flex items-center justify-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                Reject
                            </button>
                        </div>
                        <% } %>
                    </div>
                    <% } %>
                </div>
                
                <!-- Right Column - Order Items & Summary -->
                <div class="lg:col-span-2">
                    <!-- Order Items Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
                        <div class="flex items-center justify-between mb-6">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-gray-800">Order Items</h3>
                            </div>
                            
                            <div class="flex items-center gap-2">
                                <a class="print-btn bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-4 rounded-lg transition-colors flex items-center gap-2 no-print" href="#">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                                    </svg>
                                    Print
                                </a>
                            </div>
                        </div>
                        
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="bg-gray-50 text-left">
                                        <th class="py-3 px-4 text-gray-600 font-medium text-sm rounded-tl-lg">Product</th>
                                        <th class="py-3 px-4 text-gray-600 font-medium text-sm text-right">Unit Price</th>
                                        <th class="py-3 px-4 text-gray-600 font-medium text-sm text-center">Quantity</th>
                                        <th class="py-3 px-4 text-gray-600 font-medium text-sm text-right rounded-tr-lg">Total</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                    <% order.items.forEach(function(item) { %>
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="py-4 px-4">
                                            <a class="flex items-center gap-3" href="/product-details/<%= item.product._id %>">
                                                <img src="/<%= item.product.images[0] %>" class="w-12 h-12 object-cover rounded-md border border-gray-200" alt="<%= item.product.product_name %>">
                                                <div class="font-medium text-gray-800 hover:text-blue-600 transition-colors"><%= item.product.product_name %></div>
                                            </a>
                                        </td>
                                        <td class="py-4 px-4 text-right text-gray-700">₹<%= item.price.toFixed(2) %></td>
                                        <td class="py-4 px-4 text-center">
                                            <span class="inline-flex items-center justify-center min-w-[2rem] h-8 px-2 rounded-full bg-gray-100 text-gray-800 font-medium"><%= item.quantity %></span>
                                        </td>
                                        <td class="py-4 px-4 text-right font-medium text-gray-800">₹<%= (item.price * item.quantity).toFixed(2) %></td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Order Summary -->
                        <div class="mt-6 pt-6 border-t border-gray-100">
                            <div class="flex flex-col items-end">
                                <div class="w-full max-w-xs space-y-2">
                                    <div class="flex justify-between text-gray-600">
                                        <span>Subtotal:</span>
                                        <span>₹<%= order.subtotal.toFixed(2) %></span>
                                    </div>
                                    <div class="flex justify-between text-gray-600">
                                        <span>Shipping:</span>
                                        <span>₹<%= order.shipping.toFixed(2) %></span>
                                    </div>
                                    <% if(order.discount && order.discount > 0) { %>
                                    <div class="flex justify-between text-gray-600">
                                        <span>Discount:</span>
                                        <span class="text-green-600">-₹<%= order.discount.toFixed(2) %></span>
                                    </div>
                                    <% } %>
                                    <div class="flex justify-between font-bold text-lg pt-2 border-t border-gray-100">
                                        <span>Total:</span>
                                        <span>₹<%= order.total.toFixed(2) %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Order Timeline -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-800">Order Timeline</h3>
                        </div>
                        
                        <div class="timeline-container">
                            <div class="timeline-item">
                                <div class="timeline-dot active"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-800">Order Placed</h4>
                                    <p class="text-sm text-gray-500"><%= order.formattedDate %></p>
                                    <p class="text-sm text-gray-600 mt-1">Customer placed order #<%= order.order_id %></p>
                                </div>
                            </div>
                            
                            <% if(order.order_status === 'confirmed' || order.order_status === 'shipped' || order.order_status === 'delivered') { %>
                            <div class="timeline-item">
                                <div class="timeline-dot active"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-800">Order Confirmed</h4>
                                    <p class="text-sm text-gray-500">Payment verified and order confirmed</p>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="timeline-item">
                                <div class="timeline-dot"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-400">Order Confirmation</h4>
                                    <p class="text-sm text-gray-400">Pending</p>
                                </div>
                            </div>
                            <% } %>
                            
                            <% if(order.order_status === 'shipped' || order.order_status === 'delivered') { %>
                            <div class="timeline-item">
                                <div class="timeline-dot active"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-800">Order Shipped</h4>
                                    <p class="text-sm text-gray-500">Package has been shipped</p>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="timeline-item">
                                <div class="timeline-dot"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-400">Order Shipment</h4>
                                    <p class="text-sm text-gray-400">Pending</p>
                                </div>
                            </div>
                            <% } %>
                            
                            <% if(order.order_status === 'delivered') { %>
                            <div class="timeline-item">
                                <div class="timeline-dot active"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-800">Order Delivered</h4>
                                    <p class="text-sm text-gray-500">Package has been delivered</p>
                                </div>
                            </div>
                            <% } else { %>
                            <div class="timeline-item">
                                <div class="timeline-dot"></div>
                                <div class="ml-2">
                                    <h4 class="font-medium text-gray-400">Order Delivery</h4>
                                    <p class="text-sm text-gray-400">Pending</p>
                                </div>
                            </div>
                            <% } %>
                        </div>
                        
                        <div class="mt-6 pt-4 border-t border-gray-100">
                            <a href="/orders/tracking/<%= order.order_id %>" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors inline-flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                                </svg>
                                View Detailed Tracking
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- content-main end// -->
        <%- include('./partials/footer') %>
    </main>
    <%- include('./partials/scriptsLinks') %>
    
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Print functionality
            document.querySelector('.print-btn').addEventListener('click', function(e) {
                e.preventDefault();
                window.print();
            });
            
            // Status Update using SweetAlert2
            const saveStatusBtn = document.getElementById('saveStatusBtn');
            const statusSelect = document.getElementById('orderStatus');
            
            saveStatusBtn.addEventListener('click', function() {
                const newStatus = statusSelect.value;
                if (!newStatus) {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Please select a status',
                        icon: 'error',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3b82f6'
                    });
                    return;
                }
                
                Swal.fire({
                    title: 'Updating Status',
                    html: 'Please wait while we update the order status',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
                
                fetch(`/admin/dashboard/orders/<%= order.order_id %>/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ order_status: newStatus })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to update order status');
                    }
                    return response.json();
                })
                .then(data => {
                    // Update UI
                    document.getElementById('currentStatus').innerHTML = `
                        <span class="status-badge ${
                            newStatus === 'pending' ? 'status-pending' : 
                            newStatus === 'confirmed' ? 'status-confirmed' : 
                            newStatus === 'shipped' ? 'status-shipped' : 
                            newStatus === 'delivered' ? 'status-delivered' : 
                            'status-cancelled'
                        }">
                            ${newStatus}
                        </span>
                    `;
                    
                    Swal.fire({
                        title: 'Success!',
                        text: 'Order status updated successfully',
                        icon: 'success',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3b82f6'
                    }).then(() => {
                        location.reload();
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Error!',
                        text: `Failed to update order status: ${error.message}`,
                        icon: 'error',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#3b82f6'
                    });
                });
            });
            
            // Return Request Approve Button
            const approveReturnBtn = document.getElementById('approveReturnBtn');
            if (approveReturnBtn) {
                approveReturnBtn.addEventListener('click', function() {
                    Swal.fire({
                        title: 'Approve Return Request',
                        text: 'Are you sure you want to approve this return request?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, approve it',
                        cancelButtonText: 'No, cancel',
                        confirmButtonColor: '#16a34a',
                        cancelButtonColor: '#6b7280'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire({
                                title: 'Processing...',
                                html: 'Please wait while we process your request',
                                allowOutsideClick: false,
                                didOpen: () => {
                                    Swal.showLoading();
                                }
                            });
                            
                            fetch(`/admin/dashboard/orders/return-approve/<%= order.order_id %>`, {
                                method: 'PATCH',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('Failed to approve return request');
                                }
                                return response.json();
                            })
                            .then(data => {
                                Swal.fire({
                                    title: 'Success!',
                                    text: 'Return request approved successfully',
                                    icon: 'success',
                                    confirmButtonText: 'OK',
                                    confirmButtonColor: '#3b82f6'
                                }).then(() => {
                                    location.reload();
                                });
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                Swal.fire({
                                    title: 'Error!',
                                    text: `Failed to approve return request: ${error.message}`,
                                    icon: 'error',
                                    confirmButtonText: 'OK',
                                    confirmButtonColor: '#3b82f6'
                                });
                            });
                        }
                    });
                });
            }
            
            // Return Request Reject Button
            const rejectReturnBtn = document.getElementById('rejectReturnBtn');
            if (rejectReturnBtn) {
                rejectReturnBtn.addEventListener('click', function() {
                    Swal.fire({
                        title: 'Reject Return Request',
                        text: 'Are you sure you want to reject this return request?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, reject it',
                        cancelButtonText: 'No, cancel',
                        confirmButtonColor: '#dc2626',
                        cancelButtonColor: '#6b7280'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire({
                                title: 'Processing...',
                                html: 'Please wait while we process your request',
                                allowOutsideClick: false,
                                didOpen: () => {
                                    Swal.showLoading();
                                }
                            });
                            
                            fetch(`/admin/dashboard/orders/return-reject/<%= order.order_id %>`, {
                                method: 'PATCH',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            })
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('Failed to reject return request');
                                }
                                return response.json();
                            })
                            .then(data => {
                                Swal.fire({
                                    title: 'Success!',
                                    text: 'Return request rejected successfully',
                                    icon: 'success',
                                    confirmButtonText: 'OK',
                                    confirmButtonColor: '#3b82f6'
                                }).then(() => {
                                    location.reload();
                                });
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                Swal.fire({
                                    title: 'Error!',
                                    text: `Failed to reject return request: ${error.message}`,
                                    icon: 'error',
                                    confirmButtonText: 'OK',
                                    confirmButtonColor: '#3b82f6'
                                });
                            });
                        }
                    });
                });
            }
            
            // Animate elements on page load
            const animateElements = document.querySelectorAll('.hover-scale');
            animateElements.forEach((element, index) => {
                setTimeout(() => {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }, 100 * index);
            });
        });
    </script>
</body>

</html>