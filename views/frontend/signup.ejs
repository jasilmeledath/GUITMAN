<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account - GUITMAN</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        purple: {
                            50: '#f5f3ff',
                            100: '#ede9fe',
                            200: '#ddd6fe',
                            300: '#c4b5fd',
                            400: '#a78bfa',
                            500: '#8b5cf6',
                            600: '#7c3aed',
                            700: '#6d28d9',
                            800: '#5b21b6',
                            900: '#4c1d95',
                            950: '#2e1065',
                        }
                    },
                    boxShadow: {
                        'custom': '0 4px 20px 0 rgba(124, 58, 237, 0.1)',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .bg-gradient {
            background: linear-gradient(135deg, #7c3aed 0%, #4c1d95 100%);
        }
        .form-input:focus {
            box-shadow: 0 0 0 2px rgba(124, 58, 237, 0.3);
        }
        .otp-input:focus {
            border-color: #7c3aed;
            box-shadow: 0 0 0 2px rgba(124, 58, 237, 0.2);
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-purple-50">
    <%- include('./partials/loading') %>
    <%- include('./partials/header') %>

    <main class="flex-grow grid md:grid-cols-2 overflow-hidden pt-16">
        <!-- Left Side - Guitar Image with Gradient Overlay -->
        <div class="hidden md:block relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient opacity-95 z-10"></div>
            <img
                src="/ui/login1.jpeg"
                alt="Guitar player"
                class="absolute inset-0 w-full h-full object-cover object-center"
                style="filter: grayscale(100%) contrast(1.1);"
            />
            <div class="absolute inset-0 z-20 flex flex-col items-center justify-center px-10 text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">GUITMAN</h1>
                <p class="text-purple-100 text-lg max-w-md">Join our community of guitar enthusiasts. Create an account to get started on your musical journey.</p>
            </div>
        </div>

        <!-- Right Side - Signup Form -->
        <div class="w-full px-5 md:px-10 lg:px-16 flex items-center justify-center bg-white min-h-[calc(100vh-64px)]">
            <div class="w-full max-w-md space-y-8 py-10">
                <div class="flex justify-between items-center mb-8">
                    <h2 class="text-3xl font-bold text-purple-900">Create Account</h2>
                    <button class="text-purple-600 hover:text-purple-800 transition-colors duration-200 text-sm font-medium">
                        English (UK)
                    </button>
                </div>

                <!-- Google Sign Up -->
                <button
                    class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-white border border-purple-200 rounded-lg hover:bg-purple-50 transition-colors duration-200 shadow-sm"
                    onclick="window.location.href='/auth/google'"
                >
                    <img
                        src="https://www.google.com/favicon.ico"
                        alt=""
                        class="w-5 h-5"
                    />
                    <span class="text-purple-900 font-medium">Sign up with Google</span>
                </button>

                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-purple-100"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-purple-500">or sign up with email</span>
                    </div>
                </div>

                <form class="space-y-5" action="/signup" method="post">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label for="first_name" class="block text-sm font-medium text-purple-900 mb-1.5">First Name</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <input
                                    type="text"
                                    id="first_name"
                                    name="first_name"
                                    class="form-input w-full pl-10 pr-4 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                    placeholder="First Name"
                                />
                            </div>
                            <div class="text-red-500 text-sm mt-1 error-message"></div>
                        </div>
                        <div>
                            <label for="last_name" class="block text-sm font-medium text-purple-900 mb-1.5">Last Name</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <input
                                    type="text"
                                    id="last_name"
                                    name="last_name"
                                    class="form-input w-full pl-10 pr-4 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                    placeholder="Last Name"
                                />
                            </div>
                            <div class="text-red-500 text-sm mt-1 error-message"></div>
                        </div>
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm font-medium text-purple-900 mb-1.5">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                </svg>
                            </div>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-input w-full pl-10 pr-4 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                placeholder="Email Address"
                            />
                        </div>
                        <div class="text-red-500 text-sm mt-1 error-message"></div>
                    </div>
                    
                    <div>
                        <label for="password" class="block text-sm font-medium text-purple-900 mb-1.5">Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                class="form-input w-full pl-10 pr-10 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                placeholder="Create a password"
                            />
                            <button
                                type="button"
                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-purple-400 hover:text-purple-700 transition-colors duration-200"
                                onclick="togglePasswordVisibility('password', this)"
                                aria-label="Toggle password visibility"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    />
                                </svg>
                            </button>
                        </div>
                        <div class="text-red-500 text-sm mt-1 error-message"></div>
                    </div>
                    
                    <div>
                        <label for="confirm_password" class="block text-sm font-medium text-purple-900 mb-1.5">Confirm Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input
                                type="password"
                                id="confirm_password"
                                name="confirm_password"
                                class="form-input w-full pl-10 pr-10 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                placeholder="Confirm your password"
                            />
                            <button
                                type="button"
                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-purple-400 hover:text-purple-700 transition-colors duration-200"
                                onclick="togglePasswordVisibility('confirm_password', this)"
                                aria-label="Toggle password visibility"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    />
                                </svg>
                            </button>
                        </div>
                        <div class="text-red-500 text-sm mt-1 error-message"></div>
                    </div>

                    <button
                        type="submit"
                        class="w-full py-3 px-4 mt-4 bg-gradient rounded-lg text-white hover:opacity-90 transition-opacity duration-200 font-semibold shadow-custom"
                    >
                        Create Account
                    </button>
                </form>
                
                <p class="text-center text-purple-700 mt-8">
                    Already have an account? 
                    <a href="/login" class="text-purple-600 hover:text-purple-800 font-medium hover:underline transition-colors duration-200">Log in</a>
                </p>
            </div>
        </div>
    </main>

    <%- include('./partials/footer') %>

    <!-- OTP Verification Modal -->
    <div
        id="otpModal"
        class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
    >
        <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4 relative shadow-xl">
            <button
                onclick="closeOtpModal()"
                class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 transition-colors duration-200"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"
                    />
                </svg>
            </button>
            <h3 class="text-2xl font-bold text-purple-900 mb-4">
                Email Verification
            </h3>
            <p id="otpMessage" class="text-gray-600 mb-6">
                We've sent a verification code to your email address. Please enter it below.
            </p>
            <div class="flex gap-2 mb-6 justify-center">
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border border-purple-200 rounded-lg text-2xl otp-input focus:outline-none"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border border-purple-200 rounded-lg text-2xl otp-input focus:outline-none"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border border-purple-200 rounded-lg text-2xl otp-input focus:outline-none"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border border-purple-200 rounded-lg text-2xl otp-input focus:outline-none"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border border-purple-200 rounded-lg text-2xl otp-input focus:outline-none"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border border-purple-200 rounded-lg text-2xl otp-input focus:outline-none"
                />
            </div>
            <button
                onclick="verifyOTP()"
                class="w-full py-3 px-4 bg-gradient text-white rounded-lg hover:opacity-90 transition-opacity duration-200 font-semibold shadow-custom"
            >
                Verify
            </button>
            <p class="text-center mt-4 text-gray-600">
                Didn't receive the code?
                <button
                    id="resendOtpButton"
                    onclick="resendOTP()"
                    class="text-purple-600 hover:underline disabled:text-gray-400 transition-colors duration-200 font-medium"
                    disabled
                >
                    Resend (<span id="resendCountdown">10</span>s)
                </button>
            </p>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(inputId, button) {
            const passwordInput = document.getElementById(inputId);
            const isPasswordVisible = passwordInput.type === 'text';
            passwordInput.type = isPasswordVisible ? 'password' : 'text';
    
            // Update the button's icon for better UX
            const iconPath = isPasswordVisible
                ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />`
                : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.051 10.051 0 0112 19c-4.478 0-8.268-2.943-9.542-7a10.032 10.032 0 013.2-4.45M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3l18 18" />`;
    
            button.querySelector('svg').innerHTML = iconPath;
        }

        // Form validation and OTP handling
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus next OTP input
            const otpInputs = document.querySelectorAll('.otp-input');
            otpInputs.forEach((input, index) => {
                input.addEventListener('input', function() {
                    if (this.value.length === this.maxLength && index < otpInputs.length - 1) {
                        otpInputs[index + 1].focus();
                    }
                });
                
                input.addEventListener('keydown', function(e) {
                    // Allow backspace to go to previous input
                    if (e.key === 'Backspace' && !this.value && index > 0) {
                        otpInputs[index - 1].focus();
                    }
                });
            });
        });

        // Show loader when navigating
        document.addEventListener("DOMContentLoaded", function() {
            const links = document.querySelectorAll("a");
            links.forEach(link => {
                link.addEventListener("click", function() {
                    showLoader();
                });
            });
        });
    </script>
    <script src="/frontend/js/signup.js"></script>
</body>
</html>