<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account - GUITMAN</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
  <%- include('./partials/loading') %>
    <%- include('./partials/header') %>

    <main class="flex-grow grid md:grid-cols-2 overflow-hidden pt-16"> <!-- Added pt-16 for header clearance -->
        <!-- Left Side - Guitar Image -->
        <div class="hidden md:block relative w-full h-screen overflow-hidden">
            <img
                src="/ui/login1.jpeg"
                alt="Guitar player"
                class="absolute inset-0 w-full h-full object-cover object-center"
            />
        </div>

        <!-- Right Side - Signup Form -->
        <div class="w-full px-4 md:px-8 lg:px-16 flex items-center justify-center bg-indigo-900 min-h-screen">
            <div class="w-full max-w-md space-y-8 text-white py-12">
                <div class="flex justify-between items-center">
                    <h2 class="text-3xl font-bold">Create Account</h2>
                    <button class="text-indigo-300 hover:text-white transition-colors duration-200">English (UK)</button>
                </div>

                <!-- Google Sign Up -->
                <button
                    class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-white rounded-md hover:bg-gray-100 transition-colors duration-200"
                    onclick="window.location.href='/auth/google'"
                >
                    <img
                        src="https://www.google.com/favicon.ico"
                        alt=""
                        class="w-5 h-5"
                    />
                    <span class="text-gray-800 font-medium">Sign up with Google</span>
                </button>

                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-indigo-600"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-indigo-900 text-indigo-300">OR</span>
                    </div>
                </div>

                <form class="space-y-6" action="/signup" method="post">
                    <div>
                        <input
                            type="text"
                            name="first_name"
                            class="w-full px-4 py-3 bg-indigo-800/50 border-b-2 border-indigo-600 focus:border-white focus:ring-0 placeholder-indigo-300 text-white rounded-t-md"
                            placeholder="First Name"
                        />
                        <div class="text-red-400 text-sm mt-1 error-message"></div>
                    </div>
                    <div>
                        <input
                            type="text"
                            name="last_name"
                            class="w-full px-4 py-3 bg-indigo-800/50 border-b-2 border-indigo-600 focus:border-white focus:ring-0 placeholder-indigo-300 text-white rounded-t-md"
                            placeholder="Last Name"
                        />
                        <div class="text-red-400 text-sm mt-1 error-message"></div>
                    </div>
                    <div>
                        <input
                            type="email"
                            name="email"
                            class="w-full px-4 py-3 bg-indigo-800/50 border-b-2 border-indigo-600 focus:border-white focus:ring-0 placeholder-indigo-300 text-white rounded-t-md"
                            placeholder="Email Address"
                        />
                        <div class="text-red-400 text-sm mt-1 error-message"></div>
                    </div>
                    <div class="relative">
                        <input
                            type="password"
                            name="password"
                            class="w-full px-4 py-3 bg-indigo-800/50 border-b-2 border-indigo-600 focus:border-white focus:ring-0 placeholder-indigo-300 text-white rounded-t-md"
                            placeholder="Password"
                        />
                        <button
                            type="button"
                            class="absolute right-3 top-3 text-indigo-300 hover:text-white transition-colors duration-200"
                            onclick="togglePasswordVisibility('password', this)"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                />
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                />
                            </svg>
                        </button>
                        <div class="text-red-400 text-sm mt-1 error-message"></div>
                    </div>
                    <div class="relative">
                        <input
                            type="password"
                            name="confirm_password"
                            class="w-full px-4 py-3 bg-indigo-800/50 border-b-2 border-indigo-600 focus:border-white focus:ring-0 placeholder-indigo-300 text-white rounded-t-md"
                            placeholder="Confirm Password"
                        />
                        <button
                            type="button"
                            class="absolute right-3 top-3 text-indigo-300 hover:text-white transition-colors duration-200"
                            onclick="togglePasswordVisibility('confirm_password', this)"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                />
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                />
                            </svg>
                        </button>
                        <div class="text-red-400 text-sm mt-1 error-message"></div>
                    </div>

                    <button
                        type="submit"
                        class="w-full py-3 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors duration-200 font-semibold"
                    >
                        Create Account
                    </button>
                </form>
                <p class="text-center text-indigo-200">
                    Already have an account? 
                    <a href="/login" class="text-white hover:underline transition-colors duration-200">Log in</a>
                </p>
            </div>
        </div>
    </main>

    <%- include('./partials/footer') %>

    <!-- OTP Verification Modal -->
    <div
        id="otpModal"
        class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
    >
        <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4 relative">
            <button
                onclick="closeOtpModal()"
                class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 transition-colors duration-200"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"
                    />
                </svg>
            </button>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Email Verification
            </h3>
            <p id="otpMessage" class="text-gray-600 mb-6">
                We've sent a verification code to your email address. Please enter it below.
            </p>
            <div class="flex gap-2 mb-6">
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border rounded-lg text-2xl otp-input focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border rounded-lg text-2xl otp-input focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border rounded-lg text-2xl otp-input focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border rounded-lg text-2xl otp-input focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border rounded-lg text-2xl otp-input focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                />
                <input
                    type="text"
                    maxlength="1"
                    class="w-12 h-12 text-center border rounded-lg text-2xl otp-input focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
                />
            </div>
            <button
                onclick="verifyOTP()"
                class="w-full py-3 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors duration-200 font-semibold"
            >
                Verify
            </button>
            <p class="text-center mt-4 text-gray-600">
                Didn't receive the code?
                <button
                    id="resendOtpButton"
                    onclick="resendOTP()"
                    class="text-indigo-600 hover:underline disabled:text-gray-400 transition-colors duration-200"
                    disabled
                >
                    Resend (<span id="resendCountdown">10</span>s)
                </button>
            </p>
        </div>
    </div>
    <script src="/frontend/js/signup.js"></script>
    <script>
        function togglePasswordVisibility(inputId, button) {
            const passwordInput = document.getElementById(inputId);
            const isPasswordVisible = passwordInput.type === 'text';
            passwordInput.type = isPasswordVisible ? 'password' : 'text';
    
            // Update the button's icon for better UX
            const iconPath = isPasswordVisible
                ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />`
                : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.051 10.051 0 0112 19c-4.478 0-8.268-2.943-9.542-7a10.032 10.032 0 013.2-4.45M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3l18 18" />`;
    
            button.querySelector('svg').innerHTML = iconPath;
        }
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const links = document.querySelectorAll("a");
        links.forEach(link => {
          link.addEventListener("click", function() {
            showLoader();
          });
        });
      });
      
    </script>
</body>
</html>