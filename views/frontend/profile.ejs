<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guitman - User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <%- include('./partials/loading') %>
    <%- include('./partials/header') %>

    <div class="flex flex-col md:flex-row min-h-screen pt-20 pb-16 md:pb-0">
      <!-- Sidebar -->
      <%- include('./partials/profileAside') %>

      <!-- Main Content -->
      <div class="flex-1 overflow-auto">
        <div class="max-w-7xl mx-auto p-4 md:p-6 lg:p-8">
          <!-- Stats Overview -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
            <div class="bg-white p-4 rounded-lg shadow-sm flex items-center gap-3">
              <div class="p-2 bg-blue-50 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-600">Favorite products</div>
                <div class="font-semibold text-xl">455</div>
              </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm flex items-center gap-3">
              <div class="p-2 bg-purple-50 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-600">Total Orders</div>
                <div class="font-semibold text-xl">124</div>
              </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm flex items-center gap-3">
              <div class="p-2 bg-yellow-50 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-600">Reviews added</div>
                <div class="font-semibold text-xl">1,285</div>
              </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm flex items-center gap-3">
              <div class="p-2 bg-red-50 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z" />
                </svg>
              </div>
              <div>
                <div class="text-sm text-gray-600">Product returns</div>
                <div class="font-semibold text-xl">2</div>
              </div>
            </div>
          </div>

          <!-- Account Data Section -->
          <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
            <h2 class="text-xl font-semibold mb-6">Account data</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="space-y-6">
                <div class="flex items-center gap-4">
                  <img src="<%= user.profile_image %>" alt="Profile" class="w-16 h-16 rounded-full object-cover" />
                  <div>
                    <div class="text-sm text-blue-600 font-medium">Essentials</div>
                    <div class="text-xl font-semibold">
                      <%= user.first_name %> <%= user.last_name %>
                    </div>
                  </div>
                </div>
                <div class="space-y-2">
                  <div class="text-sm text-gray-600">Email Address</div>
                  <div><%= user.email %></div>

                </div>
                <div class="space-y-2">
                  <div class="text-sm text-gray-600">Delivery Address</div>
                  <div><%= user.deliveryAddress || 'No delivery address provided' %></div>
                </div>
                <div class="space-y-2">
                  <div class="text-sm text-gray-600">Phone Number</div>
                  <div><%= user.mobile || 'No phone number provided' %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
