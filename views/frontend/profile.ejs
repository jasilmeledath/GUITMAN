<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guitman - User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body class="bg-gray-50">
    <%- include('./partials/loading') %>
    <%- include('./partials/header') %>

    <div class="flex flex-col md:flex-row min-h-screen pt-20 pb-16 md:pb-0">
      <!-- Sidebar -->
      <%- include('./partials/profileAside') %>

      <!-- Main Content -->
      <div class="flex-1 overflow-auto">
        <div class="max-w-7xl mx-auto p-4 md:p-6 lg:p-8">
          <!-- User Welcome Banner -->
          <div class="bg-gradient-to-r from-indigo-600 to-blue-500 rounded-xl shadow-lg mb-8 overflow-hidden">
            <div class="p-6 md:p-8 flex flex-col md:flex-row items-center md:items-start gap-6 text-white">
              <div class="relative">
                <img src="<%= user.profile_image %>" alt="Profile" class="w-24 h-24 rounded-full object-cover border-4 border-white shadow-md" />
                <div class="absolute -bottom-2 -right-2 bg-green-500 text-white rounded-full w-8 h-8 flex items-center justify-center shadow-md">
                  <i class="fas fa-check text-sm"></i>
                </div>
              </div>
              <div class="text-center md:text-left">
                <h1 class="text-2xl md:text-3xl font-bold">Welcome, <%= user.first_name %>!</h1>
                <p class="text-blue-100 mt-2">Manage your account details and preferences here</p>
                <div class="flex flex-wrap justify-center md:justify-start gap-4 mt-4">
                  <a href="/profile/settings" class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg text-sm font-medium transition-all duration-200">
                    <i class="fas fa-user-edit mr-2"></i> Edit Profile
                  </a>
                  <a href="/profile/settings" class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg text-sm font-medium transition-all duration-200">
                    <i class="fas fa-shield-alt mr-2"></i> Security Settings
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Stats Overview -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
            <div class="bg-white p-5 rounded-xl shadow hover:shadow-md transition-shadow duration-300 flex items-center gap-4">
              <div class="p-3 bg-blue-100 rounded-xl">
                <i class="fas fa-heart text-blue-600 text-xl"></i>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-500">Favorite products</div>
                <div class="font-bold text-2xl text-gray-800">455</div>
              </div>
            </div>
            <div class="bg-white p-5 rounded-xl shadow hover:shadow-md transition-shadow duration-300 flex items-center gap-4">
              <div class="p-3 bg-purple-100 rounded-xl">
                <i class="fas fa-shopping-bag text-purple-600 text-xl"></i>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-500">Total Orders</div>
                <div class="font-bold text-2xl text-gray-800">124</div>
              </div>
            </div>
            <div class="bg-white p-5 rounded-xl shadow hover:shadow-md transition-shadow duration-300 flex items-center gap-4">
              <div class="p-3 bg-yellow-100 rounded-xl">
                <i class="fas fa-star text-yellow-600 text-xl"></i>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-500">Reviews added</div>
                <div class="font-bold text-2xl text-gray-800">1,285</div>
              </div>
            </div>
            <div class="bg-white p-5 rounded-xl shadow hover:shadow-md transition-shadow duration-300 flex items-center gap-4">
              <div class="p-3 bg-red-100 rounded-xl">
                <i class="fas fa-undo text-red-600 text-xl"></i>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-500">Product returns</div>
                <div class="font-bold text-2xl text-gray-800">2</div>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            <!-- Account Data Section -->
            <div class="bg-white rounded-xl shadow-sm p-6 lg:col-span-1">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-800">Personal Details</h2>
                <button id="edit-profile-btn" class="text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center">
                  <i class="fas fa-pen mr-1"></i> Edit
                </button>
                <script>
                  const editProfileBtn = document.getElementById('edit-profile-btn');
                  editProfileBtn.addEventListener('click', ()=>{
                    window.location.href = '/profile/settings';
                  });
                </script>
              </div>
              
              <div class="space-y-6">
                <div class="flex items-center gap-4">
                  <img src="<%= user.profile_image %>" alt="Profile" class="w-16 h-16 rounded-full object-cover border border-gray-200" />
                  <div>
                    <div class="text-sm text-blue-600 font-medium">Account Holder</div>
                    <div class="text-xl font-bold text-gray-800">
                      <%= user.first_name %> <%= user.last_name %>
                    </div>
                  </div>
                </div>
                
                <div class="pt-4 border-t border-gray-100">
                  <div class="grid grid-cols-1 gap-y-4">
                    <div>
                      <div class="text-sm font-medium text-gray-500 mb-1">Email Address</div>
                      <div class="flex items-center gap-2">
                        <i class="fas fa-envelope text-gray-400"></i>
                        <span class="text-gray-800 font-medium"><%= user.email %></span>
                      </div>
                    </div>
                    
                    <div>
                      <div class="text-sm font-medium text-gray-500 mb-1">Phone Number</div>
                      <div class="flex items-center gap-2">
                        <i class="fas fa-phone text-gray-400"></i>
                        <span class="text-gray-800 font-medium"><%= user.mobile || 'No phone number provided' %></span>
                      </div>
                    </div>
                    
                    <div>
                      <div class="text-sm font-medium text-gray-500 mb-1">Member Since</div>
                      <div class="flex items-center gap-2">
                        <i class="fas fa-calendar text-gray-400"></i>
                        <span class="text-gray-800 font-medium">
                          <%= new Date(user.createdAt || Date.now()).toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'}) %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Addresses Section -->
            <div class="bg-white rounded-xl shadow-sm p-6 lg:col-span-2">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-800">My Addresses</h2>
                <button id="manage-address-btn"  class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center transition-colors duration-200">
                  <i class="fas fa-plus mr-2"></i> Manage Address
                </button>
                <script>
                  const manageAddressBtn = document.getElementById('manage-address-btn');
                  manageAddressBtn.addEventListener('click', ()=>{
                    window.location.href = '/profile/addresses'
                  })
                </script>
              </div>
              <% if (addresses && addresses.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <% addresses.forEach((address, index) => { %>
                    <div class="border border-gray-200 rounded-xl p-5 relative hover:border-blue-500 transition-colors duration-200">
                      <div class="absolute top-4 right-4 flex gap-2">
                        <button id="edit-address-btn" class="text-gray-400 hover:text-blue-600 transition-colors duration-200">
                          <i class="fas fa-pencil-alt"></i>
                        </button>
                        <script>
                          const editAddressBtn = document.getElementById('edit-address-btn');
                          editAddressBtn.addEventListener('click',()=>{
                            window.location.href = '/profile/addresses'
                          })
                        </script>
                      </div>
                      <div class="flex items-center mb-3">
                        <span class="px-3 py-1 bg-<%= address.address_type === 'Home' ? 'blue' : (address.address_type === 'Office' ? 'purple' : 'gray') %>-100 text-<%= address.address_type === 'Home' ? 'blue' : (address.address_type === 'Office' ? 'purple' : 'gray') %>-700 rounded-full text-xs font-medium">
                          <%= address.address_type %>
                        </span>
                        <% if (index === 0) { %>
                          <span class="ml-2 px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">Default</span>
                        <% } %>
                      </div>
                      <div class="mb-3">
                        <h3 class="font-bold text-gray-800"><%= address.full_name %></h3>
                      </div>
                      <div class="space-y-2 text-gray-600 text-sm">
                        <p><%= address.address %></p>
                        <p><%= address.landmark ? `Landmark: ${address.landmark}` : '' %></p>
                        <p><%= address.state %>, <%= address.country %> - <%= address.pincode %></p>
                      </div>
                      <div class="mt-4 pt-4 border-t border-gray-100 flex flex-col space-y-1 text-sm">
                        <div class="flex items-center gap-2">
                          <i class="fas fa-phone text-gray-400"></i>
                          <span><%= address.contact_number %></span>
                        </div>
                        <% if (address.alternate_number) { %>
                          <div class="flex items-center gap-2">
                            <i class="fas fa-phone-alt text-gray-400"></i>
                            <span><%= address.alternate_number %></span>
                          </div>
                        <% } %>
                        <div class="flex items-center gap-2">
                          <i class="fas fa-envelope text-gray-400"></i>
                          <span><%= address.email %></span>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <div class="bg-gray-50 rounded-xl p-8 text-center">
                  <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-map-marker-alt text-gray-400 text-xl"></i>
                  </div>
                  <h3 class="text-lg font-medium text-gray-800 mb-2">No addresses found</h3>
                  <p class="text-gray-500 mb-4">Add a new address to manage your deliveries efficiently.</p>
                  <button class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors duration-200">
                    <i class="fas fa-plus mr-2"></i> Manage Addresses
                  </button>
                </div>
              <% } %>
            </div>
            
          </div>
          
          <!-- Recent Orders -->
          <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-xl font-bold text-gray-800">Recent Orders</h2>
              <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center">
                View All Orders <i class="fas fa-chevron-right ml-2 text-xs"></i>
              </a>
            </div>
            
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead>
                  <tr>
                    <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                    <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
                    <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <tr>
                    <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#ORD-7893</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">Feb 21, 2025</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">3 items</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">$145.80</td>
                    <td class="px-4 py-4 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Delivered</span>
                    </td>
                    <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a href="#" class="text-blue-600 hover:text-blue-900">View</a>
                    </td>
                  </tr>
                  <tr>
                    <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#ORD-7891</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">Feb 15, 2025</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">1 item</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">$89.99</td>
                    <td class="px-4 py-4 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Shipped</span>
                    </td>
                    <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a href="#" class="text-blue-600 hover:text-blue-900">View</a>
                    </td>
                  </tr>
                  <tr>
                    <td class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#ORD-7890</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">Feb 10, 2025</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">2 items</td>
                    <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">$124.50</td>
                    <td class="px-4 py-4 whitespace-nowrap">
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Delivered</span>
                    </td>
                    <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a href="#" class="text-blue-600 hover:text-blue-900">View</a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <%- include('./partials/footer') %>
  </body>
</html>
