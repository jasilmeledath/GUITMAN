                        </div>        
                    </div>
                </div>

                <!-- Active Orders Section -->
                <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
                    <h2 class="text-xl font-semibold mb-6">Active orders</h2>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="text-left bg-gray-50">
                                <tr>
                                    <th class="p-4 text-sm font-medium text-gray-600">Order ID</th>
                                    <th class="p-4 text-sm font-medium text-gray-600">Date</th>
                                    <th class="p-4 text-sm font-medium text-gray-600">Price</th>
