<aside class="w-full md:w-64 border-r bg-white fixed md:relative bottom-0 left-0 right-0 md:block ">
  <!-- Mobile Toggle Button -->
  <button id="mobileMenuBtn" class="md:hidden w-full py-3 px-4 bg-white border-t flex items-center justify-between">
    <span class="flex items-center gap-2">
      <img src="<%= user.profile_image %>" alt="Profile" class="w-8 h-8 rounded-full object-cover"/>
      <span class="font-medium"><%= user.first_name %></span>
    </span>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <!-- Menu Content -->
  <div id="menuContent" class="hidden md:block h-[calc(100vh-3.5rem)] md:h-screen overflow-y-auto">
    <!-- User Profile Section -->
    <div class="p-4 border-b">
      <div class="flex flex-col items-center">
        <img src="<%= user.profile_image || '/ui/dprofile.jpg' %>" alt="Profile" class="w-24 h-24 rounded-full object-cover"/>
        <div class="mt-4 text-center">
          <div class="font-medium text-xl"><%= user.first_name %> <%= user.last_name %></div>
          <div class="text-sm text-gray-500"><%= user.email %></div>
        </div>
      </div>
    </div>

    <!-- Navigation Menu -->
