<nav aria-label="Breadcrumb" class="container mx-auto px-4 py-3">
    <ol class="flex flex-wrap items-center text-sm bg-gray-100 rounded-lg px-4 py-2 shadow-sm">
      <li class="flex items-center">
        <a href="/" class="text-gray-600 hover:text-indigo-600 transition-all duration-200 flex items-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          <span class="hover:underline">Home</span>
        </a>
      </li>
      <% if (breadcrumbs && breadcrumbs.length) { %>
        <% breadcrumbs.forEach((crumb, index) => { %>
          <li class="flex items-center">
            <svg class="w-5 h-5 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <% if (index === breadcrumbs.length - 1) { %>
              <span class="text-indigo-600 font-medium" aria-current="page"><%= crumb.label %></span>
            <% } else { %>
              <a href="<%= crumb.url %>" class="text-gray-600 hover:text-indigo-600 transition-all duration-200">
                <span class="hover:underline"><%= crumb.label %></span>
              </a>
            <% } %>
          </li>
        <% }); %>
      <% } %>
    </ol>
  </nav>
  
  <style>
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
  
    .hover\:underline:hover {
      text-decoration: underline;
      animation: fadeIn 0.3s ease-in-out;
    }
  </style>