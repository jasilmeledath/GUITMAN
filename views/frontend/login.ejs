<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - GUITMAN</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        purple: {
                            50: '#f5f3ff',
                            100: '#ede9fe',
                            200: '#ddd6fe',
                            300: '#c4b5fd',
                            400: '#a78bfa',
                            500: '#8b5cf6',
                            600: '#7c3aed',
                            700: '#6d28d9',
                            800: '#5b21b6',
                            900: '#4c1d95',
                            950: '#2e1065',
                        }
                    },
                    boxShadow: {
                        'custom': '0 4px 20px 0 rgba(124, 58, 237, 0.1)',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .bg-gradient {
            background: linear-gradient(135deg, #7c3aed 0%, #4c1d95 100%);
        }
        .form-input:focus {
            box-shadow: 0 0 0 2px rgba(124, 58, 237, 0.3);
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-purple-50">
    <%- include('./partials/loading') %>
    <%- include('./partials/header') %>

    <main class="flex-grow grid md:grid-cols-2 overflow-hidden pt-16 relative">
        <!-- Left Side - Login Form -->
        <div class="w-full px-5 md:px-10 lg:px-16 flex items-center justify-center bg-white min-h-[calc(100vh-64px)]">
            <div class="w-full max-w-md space-y-8 py-10">
                <div class="flex justify-between items-center mb-8">
                    <h2 class="text-3xl font-bold text-purple-900">Welcome Back</h2>
                    <button class="text-purple-600 hover:text-purple-800 transition-colors duration-200 text-sm font-medium">
                        English (UK)
                    </button>
                </div>

                <div class="space-y-8">
                    <form class="space-y-5" id="loginForm" novalidate>
                        <div>
                            <label for="email" class="block text-sm font-medium text-purple-900 mb-1.5">Email Address</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                    </svg>
                                </div>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="form-input w-full pl-10 pr-4 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                    placeholder="Enter your email"
                                />
                            </div>
                            <p id="emailError" class="text-red-500 text-sm mt-1 hidden"></p>
                        </div>
                        
                        <div>
                            <label for="password" class="block text-sm font-medium text-purple-900 mb-1.5">Password</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <input
                                    type="password"
                                    id="password"
                                    name="password"
                                    required
                                    class="form-input w-full pl-10 pr-10 py-3 border border-purple-200 rounded-lg focus:outline-none focus:border-purple-500 bg-white text-purple-900 placeholder-purple-300"
                                    placeholder="Enter your password"
                                />
                                <button
                                    type="button"
                                    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-purple-400 hover:text-purple-700 transition-colors duration-200"
                                    onclick="togglePasswordVisibility('password', this)"
                                    aria-label="Toggle password visibility"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-5 w-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                        />
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                        />
                                    </svg>
                                </button>
                            </div>
                            <p id="passwordError" class="text-red-500 text-sm mt-1 hidden"></p>
                        </div>
                        
                        <div class="flex justify-between items-center py-1">
                            <div class="flex items-center">
                                <input
                                    type="checkbox"
                                    id="remember-me"
                                    class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-purple-300 rounded"
                                />
                                <label for="remember-me" class="ml-2 block text-sm text-purple-700">
                                    Remember me
                                </label>
                            </div>
                            <div class="text-sm">
                                <a href="/reset-password" class="text-purple-600 hover:text-purple-800 font-medium transition-colors duration-200">Forgot password?</a>
                            </div>
                        </div>
                        
                        <button
                            type="submit"
                            class="w-full py-3 px-4 mt-4 bg-gradient rounded-lg text-white hover:opacity-90 transition-opacity duration-200 font-semibold shadow-custom"
                        >
                            Sign In
                        </button>
                    </form>
                    
                    <div class="relative my-6">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-purple-100"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-4 bg-white text-purple-500">or continue with</span>
                        </div>
                    </div>
                    
                    <!-- Google Login -->
                    <button class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-white border border-purple-200 rounded-lg hover:bg-purple-50 transition-colors duration-200 shadow-sm" onclick="window.location.href='/auth/google'">
                        <img src="https://www.google.com/favicon.ico" alt="" class="w-5 h-5">
                        <span class="text-purple-900 font-medium">Login with Google</span>
                    </button>

                    <p class="text-center text-purple-700 mt-8">
                        Don't have an account? 
                        <a href="/signup" class="text-purple-600 hover:text-purple-800 font-medium hover:underline transition-colors duration-200">Sign up</a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Right Side - Guitar Image with Gradient Overlay -->
        <div class="hidden md:block relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient opacity-95 z-10"></div>
            <img src="/ui/login.jpg" 
                alt="Black and white Telecaster guitar" 
                class="absolute inset-0 w-full h-full object-cover"
                style="filter: grayscale(100%) contrast(1.1);">
            <div class="absolute inset-0 z-20 flex flex-col items-center justify-center px-10 text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">GUITMAN</h1>
                <p class="text-purple-100 text-lg max-w-md">Your ultimate destination for guitar enthusiasts. Sign in to access your personalized experience.</p>
            </div>
        </div>
    </main>

    <%- include('./partials/footer') %>

    <script>
        function togglePasswordVisibility(inputId, button) {
            const passwordInput = document.getElementById(inputId);
            const isPasswordVisible = passwordInput.type === 'text';
            passwordInput.type = isPasswordVisible ? 'password' : 'text';
    
            // Update the button's icon for better UX
            const iconPath = isPasswordVisible
                ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />`
                : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.051 10.051 0 0112 19c-4.478 0-8.268-2.943-9.542-7a10.032 10.032 0 013.2-4.45M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3l18 18" />`;
    
            button.querySelector('svg').innerHTML = iconPath;
        }

        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const emailError = document.getElementById('emailError');
            const passwordError = document.getElementById('passwordError');
            
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                let valid = true;
                
                // Reset errors
                emailError.classList.add('hidden');
                passwordError.classList.add('hidden');
                
                // Email validation
                if (!emailInput.value.trim()) {
                    emailError.textContent = 'Email is required';
                    emailError.classList.remove('hidden');
                    valid = false;
                } else if (!/^\S+@\S+\.\S+$/.test(emailInput.value)) {
                    emailError.textContent = 'Please enter a valid email address';
                    emailError.classList.remove('hidden');
                    valid = false;
                }
                
                // Password validation
                if (!passwordInput.value) {
                    passwordError.textContent = 'Password is required';
                    passwordError.classList.remove('hidden');
                    valid = false;
                }
                
                // If valid, show loader and submit the form
                if (valid) {
                    showLoader();
                    // Normally form would submit, but we'll let your existing login.js handle that
                    // loginForm.submit();
                }
            });
        });
        
        // Show loader when navigating
        document.addEventListener("DOMContentLoaded", function() {
            const links = document.querySelectorAll("a");
            links.forEach(link => {
                link.addEventListener("click", function() {
                    showLoader();
                });
            });
        });
    </script>
    <script src="/frontend/js/login.js"></script>
</body>
</html>